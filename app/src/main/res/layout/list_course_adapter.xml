<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_list_course"
        android:layout_width="0dp"
        android:layout_height="243dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout623"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="150dp"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/course_list_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="171dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:text="TextView"
                    android:textColor="@color/WhiteGrey"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2712"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="171dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:text="Lecturer : "
                    android:textColor="@color/WhiteGrey"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/course_list_name" />

                <TextView
                    android:id="@+id/course_list_lecturer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/advent_pro_semibold"
                    android:text="TextView"
                    android:textColor="@color/WhiteGrey"
                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/textView2712"
                    app:layout_constraintTop_toBottomOf="@+id/course_list_name" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/imageView1112"
                android:layout_width="0dp"
                android:layout_height="103dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="250dp"
                android:background="@drawable/splash_logo"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout623"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout623"
                app:srcCompat="@drawable/ic_baseline_menu_book_24" />

            <TextView
                android:id="@+id/textView2912"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/advent_pro_semibold"
                android:text="Day : "
                android:textColor="@color/DarkBlue"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView1112"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout623" />

            <TextView
                android:id="@+id/course_list_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/advent_pro_semibold"
                android:text="TextView"
                android:textColor="@color/DarkBlue"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textView2912"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout623" />

            <TextView
                android:id="@+id/textView3112"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/advent_pro_semibold"
                android:text="Time : "
                android:textColor="@color/DarkBlue"
                app:layout_constraintStart_toEndOf="@+id/imageView1112"
                app:layout_constraintTop_toBottomOf="@+id/textView2912" />

            <TextView
                android:id="@+id/start_list_course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/advent_pro_semibold"
                android:text="TextView"
                android:textColor="@color/DarkBlue"
                app:layout_constraintStart_toEndOf="@+id/textView3112"
                app:layout_constraintTop_toBottomOf="@+id/course_list_day" />

            <TextView
                android:id="@+id/end_list_course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/advent_pro_semibold"
                android:text="TextView"
                android:textColor="@color/DarkBlue"
                app:layout_constraintStart_toEndOf="@+id/start_list_course"
                app:layout_constraintTop_toBottomOf="@+id/course_list_day" />

            <Button
                android:id="@+id/button_enroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_enabled"
                android:text="@string/enroll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/start_list_course" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>